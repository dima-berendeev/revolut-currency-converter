<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <ImageView
        android:id="@+id/currencyImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/converter_item_currency"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currencyCodeView"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/H1"
        android:textColor="@color/primaryBlack"
        app:layout_constraintEnd_toStartOf="@+id/amountField"
        app:layout_constraintStart_toEndOf="@+id/currencyImage"
        app:layout_constraintTop_toTopOf="@+id/currencyImage"
        tools:text="USD" />

    <TextView
        android:id="@+id/currencyCountryView"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/Subtle"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/currencyImage"
        app:layout_constraintEnd_toStartOf="@+id/amountField"
        app:layout_constraintStart_toEndOf="@+id/currencyImage"
        app:layout_constraintTop_toBottomOf="@+id/currencyCodeView"
        tools:text="US Dollar" />

    <com.revolut.converter.rates.android.AmountEditTextView
        android:id="@+id/amountField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif"
        android:inputType="numberDecimal"
        android:minWidth="93dp"
        android:maxWidth="186dp"
        android:textAlignment="textEnd"
        android:textColor="@color/primaryBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
